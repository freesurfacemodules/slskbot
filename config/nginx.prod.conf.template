user  nginx;
worker_processes  auto;

error_log  /dev/stderr info;
pid        /var/run/nginx/nginx.pid;

events {
    worker_connections  1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /dev/stdout  main;

    sendfile        on;
    keepalive_timeout  65;

    server {
        listen 80;
        server_name ${SLSKD_DOMAIN};

        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        location / {
            proxy_set_header Host ${SLSKD_DOMAIN};
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://slskd:5030/;
        }
    }

    server {
        listen 443 ssl;
        server_name ${SLSKD_DOMAIN};

        ssl_certificate /etc/letsencrypt/live/${SLSKD_DOMAIN}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/${SLSKD_DOMAIN}/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;

        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        location /hub/ {
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host ${SLSKD_DOMAIN};
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://slskd:5030/hub/;
        }

        location / {
            proxy_set_header Host ${SLSKD_DOMAIN};
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://slskd:5030/;
        }
    }

    server {
        listen 80;
        server_name ${NAVIDROME_DOMAIN};

        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        location / {
            proxy_set_header Host ${NAVIDROME_DOMAIN};
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://navidrome:4533/;
        }
    }

    server {
        listen 443 ssl;
        server_name ${NAVIDROME_DOMAIN};

        ssl_certificate /etc/letsencrypt/live/${SLSKD_DOMAIN}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/${SLSKD_DOMAIN}/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;

        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        location / {
            proxy_set_header Host ${NAVIDROME_DOMAIN};
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://navidrome:4533/;
        }
    }
}
